<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/app_background">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView_popular_peole"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_popular_people_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/bluegray_10"
            android:lines="2"
            android:paddingBottom="4dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/circleImageView_popular_peole"
            app:layout_constraintStart_toStartOf="@+id/circleImageView_popular_peole"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView_popular_peole"
            tools:text="Popular Actor Name" />

    <ProgressBar
            android:id="@+id/pb_single_popular_people"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_popular_people_name"
            app:layout_constraintStart_toEndOf="@+id/circleImageView_popular_peole"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>