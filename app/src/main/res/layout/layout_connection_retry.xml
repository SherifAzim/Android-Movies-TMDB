<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_trending_movie_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cloud"
                android:layout_marginBottom="7dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_trending_movie_retry"
                app:layout_constraintStart_toStartOf="@+id/tv_trending_movie_retry"
                app:layout_constraintBottom_toTopOf="@+id/tv_trending_movie_retry"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_trending_movie_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/try_again_message"
                android:textColor="@color/bluegray_80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_trending_movie_retry" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_trending_movie_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                android:textColor="@color/colorAccent"
                style="?android:attr/borderlessButtonStyle"
                app:layout_constraintEnd_toEndOf="@+id/tv_trending_movie_retry"
                app:layout_constraintStart_toStartOf="@+id/tv_trending_movie_retry"
                app:layout_constraintTop_toBottomOf="@+id/tv_trending_movie_retry"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>